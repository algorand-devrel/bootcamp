# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
continuation_indent_size = 2
indent_size = 2

[*.{html,xml}]
indent_style = spaces
indent_size = 4

[*.py]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
